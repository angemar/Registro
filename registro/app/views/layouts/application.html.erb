<!DOCTYPE html>
<html>
<head>
  <title>Registro</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="menu">
     <% if userlogged_in? %>
        <% if session[:role] == 'amministrazione' %>
          <%= link_to "Menu", menuamministrazione_path %>
          <%= link_to 'Logout', logoutamministrazione_path %>
        <% elsif session[:role] == 'docenza' %>
          <%= link_to "Menu", menudocenza_path %>
          <%= link_to 'Logout', logoutdocenza_path %>
        <% else %>
          <%= link_to "Menu", menualunno_path %>
          <%= link_to 'Logout', logoutalunno_path %>
        <% end %>
     <% else %>
       <%= link_to "Home", root_path %>
     <% end %>
  </div>

 

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%= content_tag :div, msg, :class => "flash_#{name}" %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>


