<%= form_for(@attivitaextra) do |f| %>
  <% if @attivitaextra.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attivitaextra.errors.count, "error") %> prohibited this attivitaextra from being saved:</h2>

      <ul>
      <% @attivitaextra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione %>
  </div>
  <div class="field">
    <%= f.label :"data inizio" %><br>
    <%= f.date_select :datainizio , order: [:day, :month, :year], :use_month_names => ['Gennaio', 'Febbraio', 'Marzo', 'Aprile', 'Maggio', 'Gugno', 'Luglio', 'Agosto', 'Settembre', 'Ottobre', 'Novembre','Dicembre'], start_year: Date.today.year, end_year: Date.today.year - 10 %>
  </div>
  <div class="field">
    <%= f.label :"data fine" %><br>
    <%= f.date_select :datafine , order: [:day, :month, :year], :use_month_names => ['Gennaio', 'Febbraio', 'Marzo', 'Aprile', 'Maggio', 'Gugno', 'Luglio', 'Agosto', 'Settembre', 'Ottobre', 'Novembre','Dicembre'], start_year: Date.today.year, end_year: Date.today.year - 10 %>
  </div>
  <div class="field">
    <%= f.label :luogo %><br>
    <%= f.text_field :luogo %>
  </div>
  <div class="field">
    <%= f.label :"ora inizio" %><br>
    <%= f.time_select :orainizio %>
  </div>
  <div class="field">
    <%= f.label :"ora fine" %><br>
    <%= f.time_select :orafine %>
  </div>
  <div class="field">
    <%= f.label :sezione %><br>
    <%= f.select :sezione_id, Sezione.all.collect { |p| [p.to_label , p.id ] }, include_blank: false %>
  </div>
  <div class="field">
    <%= f.hidden_field :docenza_id, :value => current_user.id %>
  </div>
    <div class="actions">
    <%= f.submit "Invio", :class => 'button', :style=>'background:#FFE0B2'%>
  </div>
<% end %>
