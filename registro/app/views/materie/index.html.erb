<p id="notice"><%= notice %></p>

<h1>Listing Materie</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materie.each do |materia| %>
      <tr>
        <td><%= materia.nome %></td>
        <td><%= link_to 'Show', materia %></td>
        <td><%= link_to 'Edit', edit_materia_path(materia) %></td>
        <td><%= link_to 'Destroy', materia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

